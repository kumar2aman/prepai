generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String     @id @default(uuid())
  username String     @unique
  email    String     @unique
  password String
  userdata UserData[]
}

model UserData {
  id           String @id @default(uuid())
  progress     String
  score        Int
  level        Int
  accuracy     Int
  streak       Int
  achievements Int
  user         User   @relation(fields: [userId], references: [id])
  userId       String
  session      Session[]
}

model Session {
  id            String   @id @default(uuid())
  name          String
  totalSession  Int
  createdAt     DateTime @default(now())
  user          UserData?  @relation(fields: [userId], references: [id])
  userId        String?
}
