generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String     @id @default(uuid())
  username String     @unique
  email    String     @unique
  password String
  userdata UserData?
  session  Session[]
}

model UserData {
  id           String @id @default(uuid())
  progress     String @default("0")
  score        Int    @default(0)
  level        Int    @default(0)   
  accuracy     Int    @default(0) 
  streak       Int    @default(0)
  achievements Int    @default(0)
  totalSession Int    @default(0)
  user         User   @relation(fields: [userId], references: [id])
  userId       String @unique
  
}

model Session {
  id            String   @id @default(uuid())
  name          String
  createdAt     DateTime @default(now())
  user          User @relation(fields: [userId], references: [id])
  userId        String
}
